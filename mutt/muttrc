set from="example@example.com.cn"
set realname = "someone"
set use_from = yes
set quit=ask-yes
set ascii_chars=yes
set include
set indent_str="> " 
my_hdr From: example@example.com.cn
mailboxes Mailbox
set folder=~/Mail
set record="~/Mail/sent"
set editor="vim"

set smtp_url="smtp://example@webmail.example.com.cn:587"
set smtp_pass="example"
set pop_user=example
set pop_pass="example"
set pop_host="pop://webmail.example.com.cn"
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set spoolfile=~/Mail/example
auto_view text/html
alternative_order text/plain text/enriched text/html



score "~N" +4
score "~O" +1

set sort=threads
set strict_threads="yes"
set locale="zh_CN"
set pager_stop
set resolve = yes
set send_charset = "us-ascii:iso-8859-1:gb18030:utf-8"
source ~/.mutt.alias
set alias_file=~/.mutt.alias

